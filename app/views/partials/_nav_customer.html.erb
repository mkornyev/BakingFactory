<!-- NavBar --> 
<div class="row navbar">
<div class="col align-self-left text-left pl-4">
  <!-- Logo -->
  <%= link_to image_tag("logo.png"), :controller => 'home', :action => 'home' %>

  <!-- Links -->
  	<%# link_to 'Baked Goods', items_path %>
    <a class="nav-link underline_effect" href="http://localhost:3000/items">Baked Goods</a>
    <%= link_to "My Account", customer_path(current_user.customer), class: "nav-link underline_effect" %>

    <!-- Logout -->
    <div style="padding-left: 6px;">
      <li style="font-size: .8em;" class="underline_effect"><%= link_to "Log Out", "http://localhost:3000/sessions/destroy" %></li>
    </div>
    <!-- Cart -->
    <span style="float: right; margin-right: 25px; margin-top: 15px;">
      <% if !session[:cart].empty? %>
        <div class="number_overlay" style="border-color: red; width: 24px; height: 30px; border-radius: 15px; position: absolute; top: 10px; right: 160px; z-index: 10; background-color: red;">
          <% if (session[:cart].values.sum) < 10 %>
            <p style="color: white; padding-left: 7px;">
              <%= (session[:cart].values.sum) %>
            </p>
          <% else %>
            <p style="color: white; padding-left: 2px;">
              <%= (session[:cart].values.sum) %>
            </p>
          <% end %>
        </div>
      <% else %>
      <% end %>
      <%= link_to image_tag("cart.png", :size => "48x48"), cart_path, class: 'underline_effect', style: 'padding-bottom: 11px' %> 
    </span>
</div>
</div>
