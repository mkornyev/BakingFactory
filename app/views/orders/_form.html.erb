
<%= form_for @order do |f| %>
  <fieldset>
    <legend>Place an Order with the Baking Factory</legend>

    <% if @addresses.nil? %>
      Your account has no associated addresses. <%= link_to 'Add one in your dashboard.', customer_path(@customer) %><br><br>
    <% else %>
      Select a Destination Address: 
      <%=  %>
      <%= f.collection_select :address, @addresses, :full_address, :full_address, {}, {class: "form-control", style: "width: 40%;"} %>    
      <%= f.submit 'Place Order', :class => 'form-control' %>
    <% end %> 
    
    <%= link_to 'Cancel', orders_path, :class => 'form-control' %>

  </fieldset>
<% end %>

