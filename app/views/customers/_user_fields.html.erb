<%= f.label :username %> 
<%= f.text_field :username, class: "form-control" %><br>
<%= f.label :password %> 
<%= f.text_field :password, class: "form-control" %><br>
<%= f.label :password_confirmation %> 
<%= f.text_field :password_confirmation, class: "form-control" %><br>
